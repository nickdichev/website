---
import MdiTwitter from "~icons/mdi/twitter";
import MdiGithub from "~icons/mdi/github";
import MdiRss from "~icons/mdi/rss";

import PostsList from "../components/PostsList.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import SeriesList from "../components/SeriesList.astro";
import { TWITTER_HANDLE, GITHUB_HANDLE } from "../consts";

const posts = await getCollection("blog");

const sortedPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .filter((post) => !post.data.planned)
  .slice(0, 3);

const featuredPosts = posts.filter((post) => post.data.featured);

const featuredSeries = (await getCollection("series")).filter((s) => s.data.featured);
---

<BaseLayout>
  <div class="space-y-10">
    <div class="space-y-4">
      <h1 class="text-4xl text-text-heading font-black">
        Hello there! <span
          class="underline underline-offset-2 decoration-brand"
          >I'm Nick</span
        >
      </h1>
      <p>
        Welcome to my blog! I'm a software engineer living in San Diego, California. I hope you enjoy reading my posts, feel free to reach out if you have any questions :)
      </p>
      <div class="space-x-1">
        <a
          href={TWITTER_HANDLE}
          target="_blank"
          class="inline-flex items-center justify-center space-x-2 py-2 px-3 rounded-md bg-surface hover:bg-surface-hover"
        >
          <MdiTwitter />
          <span>Twitter</span>
        </a>
        <a
          href={GITHUB_HANDLE}
          target="_blank"
          class="inline-flex items-center justify-center space-x-2 py-2 px-3 rounded-md bg-surface hover:bg-surface-hover"
        >
          <MdiGithub />
          <span>GitHub</span>
        </a>
        <a
          href="/rss.xml"
          target="_blank"
          class="inline-flex items-center justify-center space-x-2 py-2 px-3 rounded-md bg-surface hover:bg-surface-hover"
        >
          <MdiRss />
          <span>RSS</span>
        </a>
      </div>
    </div>
    {
      featuredPosts.length > 0 && (
        <div class="space-y-5">
          <h1 class="text-3xl text-text-heading">Featured Posts</h1>
          <PostsList posts={featuredPosts} />
        </div>
      )
    }
    <div class="space-y-5">
      <div class="flex items-center justify-between space-x-2">
        <h1 class="text-3xl text-text-heading">Latest Posts</h1>
        <a
          href="/blog"
          class="inline-flex items-center justify-center py-0.5 px-3 bg-accent hover:bg-accent-hover rounded-full text-sm text-text-inverse"
          >View all</a
        >
      </div>
      <PostsList posts={sortedPosts} />
    </div>
    {
      featuredSeries.length > 0 && (
        <div class="space-y-5">
          <div class="flex items-center justify-between space-x-2">
            <h1 class="text-3xl text-text-heading">Featured Series</h1>
            <a
              href="/series"
              class="inline-flex items-center justify-center py-0.5 px-3 bg-accent hover:bg-accent-hover rounded-full text-sm text-text-inverse"
            >
              View all
            </a>
          </div>
          <SeriesList series={featuredSeries} />
        </div>
      )
    }
  </div>
</BaseLayout>
